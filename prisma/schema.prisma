// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model pour les utilisateurs
model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String
  password      String?
  avatar        String?
  phone         String?
  bio           String?
  role          String     @default("USER") // USER, AGENT, ADMIN
  favorites     Favorite[]
  reservations  Reservation[]
  transactions  PaymentTransaction[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// Model pour les propriétés
model Property {
  id            String     @id @default(cuid())
  title         String
  description   String     // TEXT in SQLite
  slug          String     @unique
  location      String
  city          String
  district      String
  latitude      Float
  longitude     Float
  price         Float
  bedrooms      Int
  bathrooms     Int
  area          Float
  type          String     // HOUSE, APARTMENT, VILLA, COMMERCIAL, LAND
  status        String     @default("AVAILABLE") // AVAILABLE, SOLD, RENTED, PENDING
  exclusive     Boolean    @default(false)
  images        String?    // JSON encoded array as string
  amenities     String?    // JSON encoded array as string
  featured      Boolean    @default(false)
  favorites     Favorite[]
  reservations  Reservation[]
  transactions  PaymentTransaction[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// Model pour les favoris
model Favorite {
  id            String     @id @default(cuid())
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  property      Property   @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId    String
  createdAt     DateTime   @default(now())
  
  @@unique([userId, propertyId])
}

// Model pour les réservations
model Reservation {
  id            String     @id @default(cuid())
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  property      Property   @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId    String
  date          DateTime
  message       String?
  status        String     @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// Model pour les transactions crypto
model PaymentTransaction {
  id            String     @id @default(cuid())
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  property      Property   @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId    String
  amount        Float
  currency      String     // BTC, ETH, USDC
  type          String     // DEPOSIT, FULL_PAYMENT, BOOKING_FEE
  status        String     // PENDING, CONFIRMED, FAILED, COMPLETED
  txHash        String?    @unique
  contractAddress String?
  blockNumber   Int?
  gasUsed       Float?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}
